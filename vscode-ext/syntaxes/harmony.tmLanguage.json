{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Harmony",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#labels"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.harmony",
          "match": "^\\s*#.*"
        },
        {
          "name": "comment.line.double-slash.harmony",
          "match": "^\\s*//.*"
        },
        {
          "name": "comment.line.angle.harmony",
          "match": "^\\s*>.*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.operator.response.harmony",
          "match": "=>"
        },
        {
          "name": "keyword.operator.fork.harmony",
          "match": "^\\s*\\+"
        },
        {
          "name": "keyword.operator.sequence.harmony",
          "match": "^\\s*\\-"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.harmony",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.other.harmony",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "markup.heading.label.harmony",
          "match": "[^\\n:]+:"
        }
      ]
    }
  },
  "scopeName": "source.harmony"
}
