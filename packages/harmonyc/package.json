{
  "name": "harmonyc",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "tsx ./src/cli src/**/*.md && vitest run",
    "test:watch": "tsx watch ./src/cli --watch src/**/*.md & vitest",
    "publish": "rm dist/*.js && npm run build && cp -f ../../README.md dist/ && cd dist && npm publish"
  },
  "bin": {
    "harmonyc": "./dist/cli.js"
  },
  "dependencies": {
    "@cucumber/cucumber-expressions": "^17.1.0",
    "fast-glob": "^3.3.2",
    "remark-parse": "^11.0.0",
    "source-map-js": "^1.2.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.2",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.11.16",
    "expect": "^29.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  }
}
