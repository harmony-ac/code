{
  "name": "harmonyc",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "harmonyc": "tsx ./src/cli src/**/*.spec.md",
    "harmonyc:watch": "tsx watch ./src/cli src/**/*.spec.md",
    "test": "tsx ../../node_modules/@cucumber/cucumber/bin/cucumber.js -r src/**/*.steps.ts src/**/*.feature",
    "test:watch": "tsx watch ../../node_modules/@cucumber/cucumber/bin/cucumber.js -r src/**/*.steps.ts src/**/*.feature",
    "publish": "rm dist/*.js && npm run build && cp -f README.md dist/ && cd dist && npm publish"
  },
  "bin": {
    "harmonyc": "./dist/cli.js"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "typescript-parsec": "0.3.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.2",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.11.16",
    "expect": "^29.7.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
